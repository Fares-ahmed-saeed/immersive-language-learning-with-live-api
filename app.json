{
    "name": "Immersive Language Learning",
    "description": "A real-time AI language tutor using Gemini Live API on Cloud Run.",
    "hooks": {
        "prebuild": {
            "commands": [
                "gcloud services enable aiplatform.googleapis.com artifactregistry.googleapis.com --project $GOOGLE_CLOUD_PROJECT",
                "echo '‚è≥ Waiting for services to initialize...'",
                "sleep 30",
                "gcloud auth configure-docker us-central1-docker.pkg.dev --quiet",
                "gcloud projects add-iam-policy-binding $GOOGLE_CLOUD_PROJECT --member=serviceAccount:$(gcloud projects describe $GOOGLE_CLOUD_PROJECT --format='value(projectNumber)')-compute@developer.gserviceaccount.com --role=roles/aiplatform.user"
            ]
        }
    }
}